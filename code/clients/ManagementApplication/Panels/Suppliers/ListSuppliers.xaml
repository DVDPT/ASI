<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ViewModel="clr-namespace:ManagementApplication.ViewModel" x:Class="ManagementApplication.Panels.ListSuppliers" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="ListClients">
    <Page.DataContext>
        <ViewModel:SupplierListViewModel/>
    </Page.DataContext>
    <DockPanel>
        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding DataSource}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding Number}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
            <Button x:Name="bObtainList" Content="Obtain" Click="bObtainList_Click" />
        </StackPanel>
    </DockPanel>
</Page>
